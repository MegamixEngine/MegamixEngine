                playSFX(getGenericSFX(SFX_SPLASH));
            }
            else
            {
                waterPlat.x = x;
                waterPlat.y = bbox_bottom + 1;
            }
        }
        else if (instance_exists(waterPlat))
        {
            with (waterPlat)
