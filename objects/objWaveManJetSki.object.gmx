    if (!active)
    {
        var meObj = object_index;
        // Entering the wave bike
        with (objMegaman)
        {
            if (!instance_exists(vehicle))
            {
                with (other)
                {
                    if (place_meeting(x, y, other.id))
                    {
                        if (setPlayer == -1 || other.playerID == setPlayer)
                        {
                            active = true;
                            rider = other.id;
                            playerID = other.playerID;
                            depth = 0;
                            if (setPlayer == -1)
                            {
                                coopWarp(playerID,true,24,true,true,true);
                                with (objCoOpWarpStar)
