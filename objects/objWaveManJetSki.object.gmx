                                    spawnRide = meObj;
                                }
                            }
                            with (other)
                            {
                                if (isSlide)
                                {
                                    isSlide = false;
                                    slideLock = lockPoolRelease(slideLock);
                                    slideChargeLock = lockPoolRelease(slideChargeLock);
