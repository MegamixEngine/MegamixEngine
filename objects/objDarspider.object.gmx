            if (xcoll != 0 || checkFall(16 * image_xscale, 0) || onLimit) // !checkSolid(16 * image_xscale, 10 * sign(grav),1)
            {
                image_xscale *= -1;
                if (!isDei)
                    timer = 16;
                xspeed = 0;
            }
            if (timer &lt; 0)
            {
                imageIndex += ceilingAnimSpeed;
                if (floor(imageIndex) &gt; 1)
                    imageIndex = 0;
                xspeed = ceilingSpeed * image_xscale;
            }
            var _x = bbox_right;
            var _tx = 0;
            if (hasTarget)
