                xspeed = 0;
                isJumping = false;
                imageIndex = 3;
                timer = waitTime;
                if (isDei)
                {
                    imageIndex = 6;
                    playSFX(sfxHeavyLand);
                }
            }
            if (xcoll != 0)
                xspeed = xcoll;
        }
    }
    image_index = floor(imageIndex);
}
