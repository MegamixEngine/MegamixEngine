                if (distance_to_object(target) &gt; radius) &amp;&amp; (distance_to_object(target) &lt;= radius * 2)
                {
                    if ((!instance_exists(missile)) &amp;&amp; (imgIndex &lt; 2))
                    {
                        phase = 1;
                        animBack = false;
                    }
                }
                else if (distance_to_object(target) &lt;= radius)
                {
                    if ((imgIndex == 1) &amp;&amp; (hasLooped == 1) || (imgIndex == 0) &amp;&amp; (shotsFired == 2))
                    {
                        imgIndex = 6;//3;
                        phase = 2;
                        animBack = false;
                    }
                }
            }
            break;
        // Shoot
        case 1:
            imgIndex += 0.1;
            if (imgIndex == 2)//1)
