if (entityCanStep())
{
    // Shooting
    if (!shooting)
    {
        image_index = 0;
        shootTimer += 1;
        if (shootTimer &gt;= waitShoot)
        {
            shooting = true;
            shootTimer = 0;
        }
    }
    else
    {
        image_index = 1;
        shootTimer += 1;
        if (shootTimer &gt;= shootTimerMax)
        {
            if (shootAmount &lt; shootTarget)
            {
                if (bulletObject == -1)
                {
                    i = instance_create(x + 6 * image_xscale, y - 9,
                    objEnemyBullet);
                    i.xspeed = image_xscale * 2;
                    i.sprite_index = bulletSprite;
                    if (bulletMask != -1)
                        i.mask_index = bulletMask;
                    else
                        i.mask_index = bulletSprite;
                    playSFX(sfxEnemyShootClassic);
                    
                    if (bulletDamage != -1)
                    {
                        i.contactDamage = bulletDamage;
                    }
                }
                else
                {
                    i = instance_create(x + 6 * image_xscale, y - 9, bulletObject);
                    i.image_xscale = image_xscale;
                    i.image_yscale = image_yscale;
                    if (bulletSprite != -1)
                    {
                        i.sprite_index = bulletSprite;
                        if (bulletMask != -1)
                            i.mask_index = bulletMask;
                        else
                            i.mask_index = bulletSprite;
                    }
                    
                    if (bulletDamage != -1)
                    {
                        i.contactDamage = bulletDamage;
                    }
                }
                shootTimer = 0;
                
                shootAmount += 1;
            }
            if (shootAmount &gt;= shootTarget)
            {
                shootTimer = 0;
                shootAmount = 0;
                shooting = false;
            }
        }
    }
}
else if (dead)
{
    shootTimer = 0;
    shooting = initShoot;
    shootAmount = 0;
    image_index = 1;
    yspeed = jumpSpeed;
}
