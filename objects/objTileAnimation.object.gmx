            <string>event_inherited();
///Used to animate a tileset with its animation frames in different backgrounds
///An object setter is required for animating chunks of tiles(you don't have to set any object if you
///don't want to, just put one in the tileset so its tiles are splited).
///To use you have to set the animID array to the animation frames of the tileset
///and set animationLayer to the layer where the animated tiles are
/*
animLength = how many frames
animTime = interval before change
animID[#] = background frame (Note # goes up from 0 to animLength)
animateOnTransition = will stop animations during the transition

animationLayer = Layer animated tiles start at (your animated tiles should start on this layer)

Note: This only works for tiles on a 16x16 grid


see the example level for how to set this up.
*/

animLength = 1;
animTime = 1;
animateOnTransition = false;
animID[10] = tstAnimated;
animID[0] = noone;
animationLayer=100000;

timer = 0;
tileID = 0;
init=1;

doPrint = false;
file = -1;
printIterate = 0;
if (DEBUG_ENABLED)
{
    if (global.keyUp[0] &amp;&amp; global.keyLeft[0] &amp;&amp; global.keyMap[0])
    {
        doPrint = true;
        file = file_text_open_write(working_directory + "AutoTilerDump/" + roomExternalGetName(room) + "_TA.txt");
    }
}
isBaked = false;//Use after running/implementing the baking script to allow animation, without genning tiles on init.
bakeAsLayer=true;

</string>
          </argument>
        </arguments>
      </action>
    </event>
    <event eventtype="3" enumb="1">
      <action>
        <libid>1</libid>
        <id>603</id>
        <kind>7</kind>
        <userelative>0</userelative>
        <isquestion>0</isquestion>
        <useapplyto>-1</useapplyto>
        <exetype>2</exetype>
        <functionname></functionname>
        <codestring></codestring>
        <whoName>self</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// This generates tiles all across the levet
/// Note this causes lag at the start of the stage in larger levels
if(init)
{
    print("Animating");
    if (!isBaked)
    {
        var tiles = tile_get_ids_at_depth(animationLayer);
        var total = array_length_1d(tiles);
        if(total&lt;=0)
        {
            init=0;
            instance_destroy();
            exit;
        }
        
        for (var i = 0; i &lt; total; i+=1)
        {
            var tile = tiles[i];
            var bg=tile_get_background(tile);
            var skip=true;
            var k=0;
            for(var j=0; j&lt;animLength;j+=1;)
            {
                if(bg==animID[j])
                {
                    skip=false;
                    k=j+1;
                    break;
                }
            }
            if(skip)
                continue;
            if(k&gt;=animLength)
            {
                k=0;
            }
            for(var j=1;j&lt;animLength;j++)
            {
                var t = tile_add(animID[k], tile_get_left(tile),
                    tile_get_top(tile), tile_get_width(tile),
                    tile_get_height(tile), tile_get_x(tile), tile_get_y(tile),
                    animationLayer + j);
                if (doPrint)
                {
                    var p = true;
                    if (bakeAsLayer)
                    {
                        for (var q = 1; q &lt; j; q++)
                        {
                            if (q != j &amp;&amp; animID[q] == animID[j])
                            {
                                p = false;
                            }
                        }
                    }
                    if (p)
                    {
                        assert(tile_get_blend(t) == c_white &amp;&amp; tile_get_alpha(t) == 1, "Non-default colors for tiles not supported!");
                        file_text_write_string(file,
                            '    &lt;tile bgName="' + string(background_get_name(tile_get_background(t)))
                            + '" x="' + string(tile_get_x(t))
                            + '" y="' + string(tile_get_y(t))
                            + '" w="' + string(tile_get_width(t))
                            + '" h="' + string(tile_get_height(t))
                            + '" xo="' + string(tile_get_left(t))
                            + '" yo="' + string(tile_get_top(t))
                            + '" id="' +  string(t)//Make sure this is OK!
                            + '" name="' + "ANIM_" + string(printIterate)
                            + '" depth="' + string(tile_get_depth(t))
                            + '" locked="0'
                            + '" colour="' +  "4294967295"
                            + '" scaleX="' + string(tile_get_xscale(t))
                            + '" scaleY="' + string(tile_get_yscale(t))
                            + '"/&gt;'
                            );
                            file_text_writeln(file);
                            printIterate++;
                    }
                }
    
                ++k;
                if(k&gt;=animLength)
                {
                    k=0;
                }
            }
        }
        for(var i =1;i&lt;animLength;i++)
            tile_layer_hide(animationLayer+i);
        init=false;
        if (doPrint)
        {
            file_text_close(file);
            print("Anim file written to",WL_SHOW);
        }
    }
    else
    {
        init = 0;
        for(var i =1;i&lt;animLength;i++)
            tile_layer_hide(animationLayer+i);
    }
    exit;
}

if (global.frozen)
{
    if (!global.switchingSections)
    {
        exit;
    }
    else if (!animateOnTransition)
    {
        exit;
    }
}

if (timer &lt; animTime)
{
    timer += 1;
}
else
{
    timer = 0;
    if (tileID &lt; animLength)
    {
        tile_layer_hide(animationLayer + tileID);
        tileID += 1;
        if(tileID==animLength)
            tileID = 0;
        tile_layer_show(animationLayer + tileID);
    }
}


</string>
          </argument>
        </arguments>
      </action>
