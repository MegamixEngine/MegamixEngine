          <argument>
            <kind>1</kind>
            <string>event_inherited();

if (!global.frozen &amp;&amp; !dead &amp;&amp; !global.timeStopped)
{
    // check if our friend the tornado is goin
    if (instance_exists(objTornadoBlow))
    {
        phase = 1; // make platform always go to top
    }
    
    if (phase == 1)
    {
        // GO UP BOY
        if (yspeed &gt; -3)
        {
            yspeed -= 0.01;
        }
        
        if (image_speed &lt; 0.5)
        {
            image_speed += 0.01;
        }
    }
    else if (timer &gt; 0)
    {
        // delay falling down if top is reached
        timer--;
    }
    else
    {
        // go back to original position
        if (image_speed &gt; 0)
        {
            image_speed -= 0.01;
        }
        
        if (yspeed &lt; 2)
        {
            yspeed += 0.025;
        }
    }
    
    // platform boundaries
    if (place_meeting(x, y, objCopterPlatformStop) &amp;&amp; yspeed &lt; 0)
    {
        yspeed = 0;
        timer = waitTime;
        phase = 0;
    }
    
    if (y &gt;= ystart &amp;&amp; yspeed &gt; 0)
    {
        shiftObject(0, ystart - y, false);
        yspeed = 0;
        image_speed = 0;
        image_index = 0;
    }
}
else if (dead)
{
    phase = 0;
    image_speed = 0;
    image_index = 0;
    timer = 0;
}
</string>
