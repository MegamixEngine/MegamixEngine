        timer += 1; // action timer
        if (timer == 17)
        {
            // for loop used to make more efficent code
            for (i = -1; i &lt;= 1; i += 1)
            {
                ID = instance_create(x + image_xscale * 8, spriteGetYCenter(), objMM2MetBullet);
                ID.dir = 45 * i;
                ID.image_xscale = image_xscale;
            }
            playSFX(sfxEnemyShootClassic);
        }
        else if (timer == 30)
        {
            image_index = 0;
        }
        else if (timer &gt;= 80) // return to helmet down after 80 frames (roughly a little over a second)
        {
            phase = 1;
            timer = 0;
        }
    }
}
else if (dead)
{
    timer = 0;
    phase = 1;
    image_index = 0;
}
