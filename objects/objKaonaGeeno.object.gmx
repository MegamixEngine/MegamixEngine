            myKaona.blockCollision = false;
        }
        myKaona.image_index = floor(kaonaSize * 2);
    }
    with (myKaona)
        image_xscale = other.image_xscale;
    
    // phase logic:
    switch (phase)
    {
        case 0: // grow komae 
            if (waitTimer &lt;= 20)
                image_index = 1;
            else if (waitTimer &lt;= 30)
                image_index = 6;
            else
                image_index = 5;
            if (waitTimer &lt;= 0 &amp;&amp; instance_exists(target))
