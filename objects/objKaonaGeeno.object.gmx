                phase = 0;
                exit;
            }
            if (!instance_exists(target))
            {
                // no target -- wait for target to arrive
                exit;
            }
            
            // throwing animation
            if (throwTimer &lt; 20)
            {
                image_index = 2;
                with (myKaona)
