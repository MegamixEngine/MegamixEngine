            <kind>1</kind>
            <string>/// They will drop a nest creating five Chibees
event_inherited();

healthpointsStart = 3;
healthpoints = healthpointsStart;
contactDamage = 6;

category = "flying, nature";

blockCollision = 0;
grav = 0;

// Enemy specific code
phase = 0;
radius = 6 * 16; // this is how far AWAY have su bee is, but only after flying past megaman
dropTimer = 0;
spd = 4.5;

imgSpd = 0.2;
imgIndex = 0;
