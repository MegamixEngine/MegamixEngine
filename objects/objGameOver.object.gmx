          <argument>
            <kind>1</kind>
            <string>var currentPhase = phase;

phaseTimer++;

switch (phase)
{
    case 0: //Wait before scrolling
        if (phaseTimer == 150)
        {
            phase = 1;
        }
        break;
    
    case 1: //Scroll
        if (phaseTimer == 4)
        {
            if (view_xview &lt; 256)
            {
                view_xview += 8;
                phaseTimer = 0;
            }
            else
            {
                playMusic("Mega_Man_2.nsf", "VGM", 13, 0, 0, true, 1);
                phase = 2;
            }
        }
        break;
    
    case 2: //Select option
        // switch selection
        var selected = false;
        var yDir = 0;
        
        var selectionCount = array_length_1d(optionText);
        
        for (var i = 0; i &lt; global.playerCount; i++)
        {
            yDir += (global.keyDownPressed[i] - global.keyUpPressed[i]);
            
            selected = (selected || global.keyPausePressed[i]);
        }
        
        if (yDir != 0)
        {
            selection = modf((selection + yDir), selectionCount);
            
            playSFX(sfxMenuMove);
        }
        
        // select an option
        if (selected)
        {
            stopMusic();
            
            switch (selection)
            {
                case 0: goToLevel(global.stage, false);  break; // try stage again
                case 1: returnFromLevel();               break; // quit :(
                case 2: global.nextRoom = rmTitleScreen; break; // exit to title screen
            }
            
            playSFX(sfxMenuSelect);
            phase = 3;
        }
        break;
    
    case 3: //Transitioning (no input)
        //SORRY NOTHING
        break;
}

if (currentPhase != phase)
{
    phaseTimer = 0;
}
</string>
