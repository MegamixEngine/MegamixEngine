                        playSFX(sfxMissileLaunch);
                    }
                }
            }
            if (moveTimer &lt;= 60)
            {
                if (instance_exists(target))
                {
                    if (abs(target.x - x) &lt;= radius)
                    {
                        phase = 1;
                        calibrateDirection();
                        xspeed = moveSpeed * image_xscale;
                        yspeed = flySpeed;
                    }
                }
            }
